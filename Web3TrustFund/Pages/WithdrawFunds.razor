<div id = "ControlRegion">
   <div class="control-section">
        <div class="col-lg-12">
            <div class="control_wrapper">
                <div class="control-label color">Enter An Amount Of ETH To Withdraw:</div>
                <div class="color">@AmountEthWithdraw</div>
                <SfNumericTextBox Placeholder="Amount To Withdraw" @bind-Value="@AmountEthWithdraw" FloatLabelType="@FloatLabelType.Auto" TValue="decimal" ValidateDecimalOnType="true" Format="n3" Decimals=18 Min=0></SfNumericTextBox>
            </div>
        </div>
    </div>  
</div>
<div class="text-center">
    <div>
        <div>
            <div class="parent-submit">
            
                <div class="btn-submit">
                    <SfButton @onclick="OnSubmitClicked" IsPrimary="true" CssClass="e-outline color">Submit And Withdraw Funds</SfButton>
                </div>
        </div>
        </div>
    </div>
</div>
